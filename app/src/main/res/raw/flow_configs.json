    {
      "platformId": "SWIGGY",
      "version": 1,
      "appName": "Swiggy",
      "packageName": "in.swiggy.android",
      "steps": [
        { "type": "delay", "name": "wait_app_load", "delayMs": 2000, "description": "Waiting for Swiggy to load..." },
        {
          "type": "click", "name": "tap_search", "timeoutMs": 8000, "description": "Opening search...",
          "selector": { "descriptionContains": "search", "alternateSelectors": [
            { "textContains": "Search" }, { "resourceId": "search" }
          ]}
        },
        {
          "type": "type", "name": "type_query", "textKey": "QUERY", "timeoutMs": 5000, "description": "Typing search query...",
          "selector": { "className": "android.widget.EditText" }
        },
        { "type": "ime", "name": "submit_search", "timeoutMs": 2000, "description": "Submitting search..." },
        { "type": "delay", "name": "wait_results", "delayMs": 2500, "description": "Waiting for results..." },
        {
          "type": "click_first", "name": "select_result", "timeoutMs": 5000, "description": "Selecting first result...",
          "selector": { "useFirstClickable": true }
        },
        { "type": "delay", "name": "wait_item", "delayMs": 1500, "description": "Loading item details..." },
        {
          "type": "click", "name": "add_to_cart", "timeoutMs": 8000, "description": "Adding to cart...",
          "selector": { "textContains": "ADD", "alternateSelectors": [
            { "textContains": "Add" }, { "descriptionContains": "add" }
          ]}
        },
        { "type": "delay", "name": "wait_cart", "delayMs": 1500, "description": "Updating cart..." },
        {
          "type": "click", "name": "go_checkout", "timeoutMs": 8000, "description": "Opening checkout...",
          "selector": { "textContains": "Checkout", "alternateSelectors": [
            { "textContains": "View Cart" }, { "textContains": "Proceed" }, { "textContains": "cart" }
          ]}
        },
        { "type": "stop_payment", "name": "done", "description": "Cart is ready! Please review and place your order." }
      ]
    },
